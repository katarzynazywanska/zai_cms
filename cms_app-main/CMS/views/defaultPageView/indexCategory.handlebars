<div class="row">

    <!-- Blog Entries Column -->
    <div class="col-md-8">

        <h1 class="my-4">Welcome!
            {{!-- <small>Secondary Text</small> --}}
        </h1>

        <!-- Blog Post -->
        {{#each posts}}
        <div class="card mb-4">

            {{#if wpis_plik}}
            <img class="card-img-top" src="http://localhost:3000{{wpis_plik}}" alt="Card image cap">
            {{else}}
            <img class="card-img-top" src="https://picsum.photos/seed/picsum/750/300" alt="Card image cap">
            {{/if}}

            <div class="card-body">
                <h2 class="card-title">{{wpis_tytul}}</h2>
                <p class="card-text">{{wpis_tresc}}</p>
                <a href="/singlepost/{{wpis_id}}" class="btn btn-primary">Read More &rarr;</a>
            </div>
            <div class="card-footer text-muted">
                Posted on {{wpis_data_opublikowania}} by {{uzytkownik_imie}} {{uzytkownik_nazwisko}}
            </div>
        </div>
        {{/each}}

        <!-- Pagination -->
        <ul class="pagination justify-content-center mb-4">
            <li class="page-item">
                <a class="page-link" href="#">&larr; Older</a>
            </li>
            <li class="page-item disabled">
                <a class="page-link" href="#">Newer &rarr;</a>
            </li>
        </ul>

    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            {{#each categories}}
                            <li>
                                <a href="/category/{{kategoria_id}}">{{kategoria_tytul}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
            You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>

    </div>

</div>
<!-- /.row -->