
<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">{{post.wpis_tytul}}</h1>

        <!-- Author -->
        <p class="lead">
            by {{post.uzytkownik_imie}} {{post.uzytkownik_nazwisko}}
        </p>

        <hr>

        <!-- Date/Time -->
        <p>Posted on {{post.wpis_data_opublikowania}}</p>

        <hr>

        <!-- Preview Image -->
        {{#if post.wpis_plik}}
            <img class="img-fluid rounded" src="http://localhost:3000{{post.wpis_plik}}" alt="Card image cap">
        {{else}}
            <img class="img-fluid rounded" src="https://picsum.photos/seed/picsum/750/300" alt="Card image cap">
        {{/if}}

        <hr>

        <!-- Post Content -->
        <p class="lead">{{post.wpis_tresc}}</p>


        <hr>
        {{#if post.wpis_odblokuj_komentarze}}
            <!-- Comments Form -->
            <div class="card my-4">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body">
                    <form action="/singlepost/{{post.wpis_id}}" method="post">
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="commentContent"></textarea>
                            <input type="hidden" name="id" value="{{post.wpis_id}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        {{/if}}

        <!-- Single Comment -->

        {{#each comments}}
            {{#if komentarz_zatwierdzony}}
                <div class="media mb-4">
                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                    <div class="media-body">
                        <h5 class="mt-0">{{uzytkownik_imie}} {{uzytkownik_nazwisko}}</h5>
                        {{komentarz_tresc}}
                    </div>
                </div>
            {{/if}}

        {{/each}}




    </div>

    <!-- Sidebar Widgets Column -->
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card my-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
            </span>
                </div>
            </div>
        </div>

        <!-- Categories Widget -->
        <div class="card my-4">
            <h5 class="card-header">Categories</h5>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled mb-0">
                            {{#each categories}}
                            <li>
                                <a href="#">{{kategoria_tytul}}</a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </div>
        </div>

        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>

    </div>

</div>
<!-- /.row -->
