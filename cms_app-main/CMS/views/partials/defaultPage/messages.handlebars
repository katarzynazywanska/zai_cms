<div class="container">
    {{#if successMessage}}
    <div class="alert alert-success alert-dismissible fade show my-2 auto-hide" role="alert">
        <strong>{{successMessage}}</strong>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}

    {{#if errorMessage}}
    <div class="alert alert-danger alert-dismissible fade show my-2 auto-hide" role="alert">
        <strong>{{errorMessage}}</strong>

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
</div>